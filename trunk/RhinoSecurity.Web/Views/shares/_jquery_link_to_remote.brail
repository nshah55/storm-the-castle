<script language="javascript">

	function linkToRemote(_url, _queryString){
		$.ajax({
			type: "POST",
			dataType: 'script',
			url: _url,
			data: _queryString
		});
	}
	
	function linkToRemoteOrHide(_el, _url, _queryString){
		var e1 = '#' + _el;
		var content = $(e1).html();
		
		if (content.length > 0){
			$(e1).empty();
			$(e1).hide();
		}else{
			linkToRemote(_url, _queryString);
			$(e1).show();
		}
	}
</script>